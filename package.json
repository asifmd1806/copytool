{
  "name": "vscode-copytool",
  "displayName": "Copy Tool",
  "description": "A VS Code extension for copying code with file paths and managing code snippets in lists",
  "version": "0.5.1",
  "publisher": "ASIF MOHAMMED",
  "author": {
    "name": "ASIF MOHAMMED",
    "email": "asif18061996@gmail.com"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "copy",
    "clipboard",
    "code snippets",
    "file path",
    "lists"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "copyToolLists",
          "title": "Copy Tool Lists",
          "icon": "$(list-unordered)"
        }
      ]
    },
    "views": {
      "copyToolLists": [
        {
          "id": "copyToolLists",
          "name": "Copy Lists",
          "icon": "$(list-unordered)",
          "contextualTitle": "Copy Tool Lists"
        }
      ]
    },
    "commands": [
      {
        "command": "copytool.addToNewClipboard",
        "title": "Add to New Clipboard",
        "category": "Copy Tool"
      },
      {
        "command": "copytool.addToExistingClipboard",
        "title": "Add to Existing Clipboard",
        "category": "Copy Tool"
      },
      {
        "command": "copytool.addToList",
        "title": "Add to List",
        "category": "Copy Tool"
      },
      {
        "command": "copytool.createList",
        "title": "Create List",
        "category": "Copy Tool",
        "icon": "$(add)"
      },
      {
        "command": "copytool.deleteList",
        "title": "Delete List",
        "category": "Copy Tool",
        "icon": "$(trash)"
      },
      {
        "command": "copytool.copyListContents",
        "title": "Copy List Contents",
        "category": "Copy Tool",
        "icon": "$(copy)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "copytool.createList",
          "when": "view == copyToolLists",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "copytool.deleteList",
          "when": "view == copyToolLists && viewItem == list",
          "group": "inline"
        },
        {
          "command": "copytool.copyListContents",
          "when": "view == copyToolLists && viewItem == list",
          "group": "inline"
        }
      ],
      "explorer/context": [
        {
          "command": "copytool.addToNewClipboard",
          "group": "copytool@1"
        },
        {
          "command": "copytool.addToExistingClipboard",
          "group": "copytool@2"
        },
        {
          "command": "copytool.addToList",
          "group": "copytool@3"
        }
      ],
      "editor/context": [
        {
          "command": "copytool.addToNewClipboard",
          "group": "copytool@1"
        },
        {
          "command": "copytool.addToExistingClipboard",
          "group": "copytool@2"
        },
        {
          "command": "copytool.addToList",
          "group": "copytool@3"
        }
      ]
    },
    "configuration": {
      "title": "Copy Tool",
      "properties": {
        "copytool.format": {
          "type": "string",
          "default": "{filepath-from-the-project directory}\n```\n{content}\n```",
          "description": "Format for copied content. Use {filepath-from-the-project directory} for file path and {content} for file content."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "build": "npm run compile && vsce package --no-dependencies"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "20.x",
    "@types/uuid": "^9.0.8",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@vscode/test-electron": "^2.3.8",
    "eslint": "^8.56.0",
    "glob": "^10.3.10",
    "mocha": "^10.2.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "uuid": "^9.0.1"
  }
}
